{
  "extends": ["standard", "prettier-standard"],
  "overrides": [
    {
      "files": ["./src/**/*.test.js"],
      "extends": "plugin:jest/all",
      "rules": {
        "jest/no-hooks": 0,
        "jest/lowercase-name": [
          "error",
          {
            "allowedPrefixes": [
              "GET",
              "POST",
              "PATCH",
              "PUT",
              "DELETE",
              "OPTIONS"
            ]
          }
        ]
      }
    }
  ],
  "plugins": ["jest"]
}
